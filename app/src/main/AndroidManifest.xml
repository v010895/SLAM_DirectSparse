<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dsoslam">
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/slam"
        android:label="DSO_SLAM"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.dsoslam.MainActivity"
            android:label="SLAM    DIRECT"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.dsoslam.DataSetModeActivity"
            android:label="DataSetMode"
            android:screenOrientation="landscape" >
        </activity>

        <activity
            android:name="com.example.dsoslam.FileChooserActivity"
            android:label="ChooseDirectory"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.dsoslam.DSOForDataSetActivity"
            android:label="ORB_SLAM2"
            android:screenOrientation="landscape" >
        </activity>
    </application>
</manifest>