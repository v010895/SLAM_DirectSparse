<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/choose_dataset"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:text="Choose Left Image" />

        <TextView
            android:id="@+id/dataset_path_txt"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:text="dataset path is empty!" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/choose_dataset_2"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:text="Choose Right Image" />

        <TextView
            android:id="@+id/dataset_path_txt_2"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:text="dataset path is empty!" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/choose_calibration"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:text="choose Settings" />

        <TextView
            android:id="@+id/cal_path_txt"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:text="settings path is empty!" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/finish"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:text="finish and start SLAM" />

        <TextView
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:text="" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dip"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="#CCCCCC" />

</LinearLayout>